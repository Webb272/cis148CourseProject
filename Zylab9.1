import java.util.Scanner;

public class TriangleArea {
   public static void main(String[] args) {
      Scanner scnr = new Scanner(System.in);
      
      Triangle triangle1 = new Triangle();
      Triangle triangle2 = new Triangle();

              double base1 = scnr.nextDouble();
        double height1 = scnr.nextDouble();
        triangle1.setBase(base1);
        triangle1.setHeight(height1);
      
              double base2 = scnr.nextDouble();
        double height2 = scnr.nextDouble();
        triangle2.setBase(base2);
        triangle2.setHeight(height2);
      
              double area1 = triangle1.getArea();
        double area2 = triangle2.getArea();
      
      System.out.println("Triangle with larger area:");
              if (area1 > area2) {
            System.out.printf("Base: %.2f\n", base1);
            System.out.printf("Height: %.2f\n", height1);
            System.out.printf("Area: %.2f\n", area1);
        } else {
            System.out.printf("Base: %.2f\n", base2);
            System.out.printf("Height: %.2f\n", height2);
            System.out.printf("Area: %.2f\n", area2);
        }
   }
}
